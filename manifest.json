{
  "manifest_version": 2,
  "name": "Chronicle - Recent Site History",
  "version": "0.0.1",
  "description": "Easily access your recent history within the current site",

  "icons": {
    "16": "icons/16px.png",
    "32": "icons/32px.png",
    "48": "icons/48px.png",
    "128": "icons/128px.png"
  },
  
  "browser_action": {
    "default_popup": "popup.html"
  },

  "author": "Theodore Hu",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'", 
  "options_page": "options.html",
  "permissions": ["storage", "activeTab", "history", "chrome://favicon/"]
}
